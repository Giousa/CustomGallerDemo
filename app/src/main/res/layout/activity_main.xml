<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zmm.customairwavedemo.MainActivity">

    <com.zmm.customairwavedemo.galler.GallerViewPager
        android:id="@+id/galler_view_pager"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <LinearLayout
        android:layout_width="480px"
        android:layout_height="150px"
        android:orientation="horizontal"
        android:background="@drawable/leg_bg">

        <ImageView
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:background="@drawable/leg_part1_on"/>

        <ImageView
            android:visibility="invisible"
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:background="@drawable/leg_part2_on"/>

        <ImageView
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:background="@drawable/leg_part3_on"/>

        <ImageView
            android:layout_width="120px"
            android:layout_height="wrap_content"
            android:background="@drawable/leg_part4_on"/>


    </LinearLayout>

</LinearLayout>
